{
    "dashboard": {
        "id": null,
        "title": "Kafka Trading Platform Monitoring",
        "description": "Kafka cluster monitoring for trading application",
        "tags": [
            "kafka",
            "trading",
            "monitoring"
        ],
        "style": "dark",
        "timezone": "browser",
        "refresh": "30s",
        "time": {
            "from": "now-1h",
            "to": "now"
        },
        "panels": [
            {
                "id": 1,
                "title": "Kafka Broker Status",
                "type": "stat",
                "targets": [
                    {
                        "expr": "kafka_server_replicamanager_leadercount",
                        "legendFormat": "Leader Count"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 0
                }
            },
            {
                "id": 2,
                "title": "Messages In Per Second",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(kafka_server_brokertopicmetrics_messagesin_total[5m])",
                        "legendFormat": "Messages/sec"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 0
                }
            },
            {
                "id": 3,
                "title": "Bytes In Per Second",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(kafka_server_brokertopicmetrics_bytesin_total[5m])",
                        "legendFormat": "Bytes/sec In"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 8
                }
            },
            {
                "id": 4,
                "title": "Consumer Lag",
                "type": "graph",
                "targets": [
                    {
                        "expr": "kafka_consumer_lag_sum",
                        "legendFormat": "Consumer Lag - {{topic}}"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 8
                }
            },
            {
                "id": 5,
                "title": "Topic Partition Count",
                "type": "table",
                "targets": [
                    {
                        "expr": "kafka_topic_partitions",
                        "legendFormat": "{{topic}}"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 24,
                    "x": 0,
                    "y": 16
                }
            },
            {
                "id": 6,
                "title": "Node CPU Usage",
                "type": "graph",
                "targets": [
                    {
                        "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
                        "legendFormat": "CPU Usage %"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 24
                }
            },
            {
                "id": 7,
                "title": "Node Memory Usage",
                "type": "graph",
                "targets": [
                    {
                        "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
                        "legendFormat": "Memory Usage %"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 24
                }
            }
        ]
    }
}